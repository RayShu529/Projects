<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Capstone" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="android:textColorPrimary">@color/white</item> <!-- Make sure text color is visible on the background -->
        <item name="colorPrimary">@color/darkred</item>
        <item name="colorPrimaryVariant">@color/blgray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blgray</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Customize your dark theme here -->

        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorPrimary">@color/dark_primary</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="android:colorAccent">@color/dark_accent</item>
        <item name="android:textColorPrimary">@color/white</item> <!-- Make sure text color is visible on the background -->
        <item name="colorPrimary">@color/darkred</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Add other dark theme attributes as needed -->
    </style>
</resources>