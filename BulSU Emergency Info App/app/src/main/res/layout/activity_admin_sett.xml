<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminSetting.adminSett"
    android:background="@color/white"
    android:screenOrientation="portrait">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/backbtn"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:paddingRight="60dp"
                android:text="Settings"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="27dp" />
        </LinearLayout>



        <Button
            android:id="@+id/showID"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/buttondesign"
            android:fontFamily="sans-serif-medium"
            android:text="Change ID"

            android:textSize="20dp" />

        <Button
            android:id="@+id/showPASS"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttondesign"
            android:fontFamily="sans-serif-medium"
            android:text="Change PASSWORD"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <Button
            android:id="@+id/showPIC"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttondesign"
            android:fontFamily="sans-serif-medium"
            android:text="CHANGE BULSU PLAN"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <Button
            android:id="@+id/showC"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttondesign"
            android:fontFamily="sans-serif-medium"
            android:text="restore code"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <LinearLayout
            android:id="@+id/LCODE"
            android:layout_width="320dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="30dp"
             >
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="6-digit Code"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittextdesign"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />

            <Button
                android:id="@+id/changeCode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bdnames"
                android:backgroundTint="@color/lgreen"
                android:fontFamily="sans-serif-medium"
                android:text="CREATE NEW"
                android:textColor="@color/white"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/PIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/adminPIC"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/add"
                android:background="@drawable/addnew"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passPIC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CURRENT PASSWORD"
                    android:inputType="textPassword"
                    android:background="@drawable/edittextdesign"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-medium"

                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passPIC2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="CONFIRM CURRENT PASSWORD"
                    android:background="@drawable/edittextdesign"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-medium"

                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/updatePIC"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bdnames"
                android:backgroundTint="@color/lgreen"
                android:fontFamily="sans-serif-medium"
                android:text="UPDATE BULSU PLAN"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp"
            android:visibility="gone"
            >

            <EditText
                android:id="@+id/adminID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NEW ID"
                android:inputType="number"
                android:textColor="@color/white"
                android:background="@drawable/edittextdesign"
                android:padding="10dp"
                android:fontFamily="sans-serif-medium"
                  />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CURRENT PASSWORD"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:background="@drawable/edittextdesign"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-medium"

                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passID2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CONFIRM CURRENT PASSWORD"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:background="@drawable/edittextdesign"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-medium"

                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/updateID"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bdnames"
                android:backgroundTint="@color/lgreen"
                android:fontFamily="sans-serif-medium"
                android:text="UPDATE ID"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PASS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp"
            android:visibility="gone"
             >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/adminPASS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NEW PASSWORD"
                    android:textColor="@color/white"
                    android:background="@drawable/edittextdesign"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-medium"

                    android:inputType="textPassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passPASS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CURRENT PASSWORD"
                    android:background="@drawable/edittextdesign"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-medium"

                    android:inputType="textPassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passPASS2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextdesign"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-medium"

                    android:hint="CONFIRM CURRENT PASSWORD"
                    android:inputType="textPassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/updatePASS"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/bdnames"
                android:backgroundTint="@color/lgreen"
                android:fontFamily="sans-serif-medium"
                android:text="UPDATE PASSWORD"

                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77FFF3F3" />

        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loadingProgressBar"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Loading" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>