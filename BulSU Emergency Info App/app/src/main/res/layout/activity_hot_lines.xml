<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.hotline.call"
    android:screenOrientation="portrait">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:layout_editor_absoluteX="1dp"
      tools:layout_editor_absoluteY="1dp"
      android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <ImageView
          android:id="@+id/back"
          android:layout_width="70dp"
          android:layout_height="50dp"
          android:layout_marginLeft="10dp"
          android:src="@drawable/backbtn"></ImageView>


    </LinearLayout>
      <ImageView
          android:layout_width="300dp"
          android:src="@drawable/ebulsu"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp"
          android:layout_height="wrap_content"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/forma"
          android:orientation="vertical"
          android:padding="40dp">

          <ImageView
              android:layout_width="300dp"
              android:layout_height="100dp"
              android:layout_gravity="center"

              android:src="@drawable/sino" />


          <LinearLayout
              android:layout_width="260dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="horizontal"
              android:layout_marginTop="40dp">

              <Button
                  android:id="@+id/pc"

                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:layout_marginRight="20dp"
                  android:background="@drawable/pol" />

              <Button
                  android:id="@+id/al"
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:background="@drawable/ambubu" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="260dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="20dp"
              android:orientation="horizontal">

              <Button
                  android:id="@+id/ff"
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:layout_marginRight="20dp"
                  android:background="@drawable/fireboy" />

              <Button
                  android:id="@+id/rc"
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:layout_marginRight="40dp"
                  android:background="@drawable/redbox" />


          </LinearLayout>
      </LinearLayout>

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>