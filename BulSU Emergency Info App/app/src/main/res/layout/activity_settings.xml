<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".user.settings.settings"
    android:background="@color/white">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/backbtn"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:paddingRight="60dp"
                android:text="Settings"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="27dp" />
        </LinearLayout>
        <Button
            android:id="@+id/showPass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/buttondesign"
            android:fontFamily="sans-serif-medium"
            android:text="Change Password"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"/>
        <Button
            android:id="@+id/showPic"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"

            android:background="@drawable/buttondesign"
            android:fontFamily="sans-serif-medium"
            android:text="Change Picture"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"/>
        <Button
            android:id="@+id/showCode"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/buttondesign"
            android:fontFamily="sans-serif-medium"
            android:text="Restore Code"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:id="@+id/LPASS"
            android:layout_width="320dp"
            android:layout_height="360dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/form2"
            android:orientation="vertical"
            android:padding="30dp"
             android:visibility="gone"
    >
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Old Password"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15dp" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/op"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittextdesign"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="20dp"
                    android:inputType="textPassword"

                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="New Password"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/np"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittextdesign"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:inputType="textPassword"

                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Confirm New Password"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/np2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittextdesign"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:inputType="textPassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/cp"
            android:layout_width="160dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bdnames"
            android:backgroundTint="@color/lgreen"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:elevation="4dp"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/LPIC"
            android:layout_width="320dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/form2"
            android:orientation="vertical"
            android:padding="30dp"
             android:visibility="gone"
            >
            <ImageView
                android:id="@+id/picture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/person"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passPicture"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittextdesign"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:inputType="textPassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/changePicture"
                android:layout_width="160dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bdnames"
                android:backgroundTint="@color/lgreen"
                android:text="Change Picture"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:elevation="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LCODE"
            android:layout_width="320dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/form2"
            android:orientation="vertical"
            android:padding="30dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="6-digit Code"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/code"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittextdesign"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    />

            <Button
                android:id="@+id/changeCode"
                android:layout_width="160dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bdnames"
                android:backgroundTint="@color/lgreen"
                android:text="Create New"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:elevation="4dp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77595959" />

        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loadingProgressBar"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:text="Loading" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>