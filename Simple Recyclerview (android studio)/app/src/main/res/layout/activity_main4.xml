<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/bg1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addentryimg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/addimgpic"
            />

        <EditText
            android:id="@+id/addentryname"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"

            android:textSize="20dp"
            android:background="@drawable/edit_text_borders"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/addentryremark"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Remarks"

            android:textSize="20dp"
            android:background="@drawable/edit_text_borders"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/addentrybday"
            android:layout_width="300dp"
            android:layout_height="wrap_content"


            android:hint="Birthdate"

            android:textSize="20dp"
            android:background="@drawable/edit_text_borders"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Gender:"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            />
        <RadioGroup
            android:layout_marginLeft="40dp"
            android:paddingLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            >

            <RadioButton
                android:id="@+id/addentrymale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Male"
                android:buttonTint="@color/black"

                />
            <RadioButton
                android:id="@+id/addentryfemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:buttonTint="@color/black"
                android:text="Female"
                />

        </RadioGroup>
        <EditText
            android:layout_gravity="center"


            android:id="@+id/addentryhobby"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Hobby"
            android:textSize="20dp"
            android:background="@drawable/edit_text_borders"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">
            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_margin="10dp"/>
        </LinearLayout>


    </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>